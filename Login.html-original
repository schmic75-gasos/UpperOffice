        <script>
            function toggleForms() {
                document.getElementById("loginBox").style.display =
                    document.getElementById("loginBox").style.display === "none" ? "block" : "none";
        
                document.getElementById("signupBox").style.display =
                    document.getElementById("signupBox").style.display === "none" ? "block" : "none";
            }
        </script>
        <script>
            async function api(path, data = null) {
    let opts = {
        method: data ? "POST" : "GET",
        headers: {}
    };

    if (data) {
        opts.headers["Content-Type"] = "application/json";
        opts.body = JSON.stringify(data);
    }

    if (localStorage.token) {
        opts.headers["Authorization"] = localStorage.token;
    }

    let r = await fetch("/api/" + path, opts);
    return r.json();
}

// ------- REGISTER -------
async function singup() {
    let username = document.getElementById("signupUser").value;
    let password = document.getElementById("singupPass").value;

    let res = await api("register", { username, password });
    console.log(res);
    alert(JSON.stringify(res));
}

// ------- LOGIN -------
async function loginUser() {
    let username = document.getElementById("loginUser").value;
    let password = document.getElementById("loginPass").value;

    let res = await api("login", { username, password });

    if (res.token) {
        localStorage.token = res.token;
        alert("P≈ôihl√°≈°eno.");
    } else {
        alert("Chyba: " + res.error);
    }
}

// ------- PROFILE -------
async function showProfile() {
    let res = await api("profile");
    alert(JSON.stringify(res));
}

